{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": false,
        "moduleResolution": "node",
        "removeComments": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es2019",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
